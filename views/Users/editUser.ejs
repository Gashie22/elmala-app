<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Edit <%= customer.CompanyName %>
  </h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button href="/add" class="btn btn-sm btn-outline-secondary"> New Client</button>
    </div>
  </div>

</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Client Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= customer.CompanyName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>

</div>

<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="CompanyName">CompanyName</label>
      <input type="text" class="form-control" id="firstName" name="CompanyName" value="<%= customer.CompanyName %>"
        placeholder="CompanyName" required>
    </div>

    <div class="col">
      <label for="Representative">Representative</label>
      <input type="text" class="form-control" id="lastName" name="Representative" value="<%= customer.Representative %>"
        placeholder="Representative" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="Telephone">Telephone</label>
      <input type="text" class="form-control" id="tel" name="Telephone" value="<%= customer.Telephone %>"
        placeholder="Telephone" required>
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="Email" value="<%= customer.Email %>" placeholder="Email"
        required>
    </div>
    <div class="col">
      <label for="Call/Meeting">Call/Meeting</label>
      <input type="text" class="form-control" id="calls" name="CallorMeeting" value="<%= customer.CallorMeeting %>"
        placeholder="Call/Meeting" required>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="tel" name="Status" value="<%= customer.Status %>"
          placeholder="Telephone" required>
      </div>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Status">Client</label>

        <select id="status" type="text" class="form-control" id="tel" name="NeworExisting" value=" " required>
          <option value="New Client" name="NeworExisting">New Client</option>
          <option value="Existing Client" name="NeworExisting">Existing Client</option>
        </select>
      </div>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Currency">Currency</label>
        <select id="status" type="text" class="form-control" id="tel" name="Currency" value=" " required>
          <option value="USD" name="Currency">USD</option>
          <option value="ZWL" name="Currency">ZWL</option>
        </select>
      </div>
    </div>

    <div class="form-group mb-4">
      <label for="details">Company Details</label>
      <textarea class="form-control" name="Details" id="details" cols="30" rows="12" value="<%= customer.Details %>"
        placeholder="Customer Details"></textarea>
    </div>

    <div class="form-group mb-4">

      <button type="submit" class="btn btn-primary">Update Customer</button>
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
        data-bs-target="#deleteModal">Delete Customer</button>
    </div>



</form>
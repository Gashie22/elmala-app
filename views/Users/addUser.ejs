<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">New Client</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button href="/add" class="btn btn-sm btn-outline-secondary"> New Client</button>
    </div>
  </div>

</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">New User</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>

</div>

<form action="/add" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="CompanyName">CompanyName</label>
      <input type="text" class="form-control" id="firstName" name="CompanyName" value="" placeholder="CompanyName"
        required>
    </div>

    <div class="col">
      <label for="Representative">Representative</label>
      <input type="text" class="form-control" id="lastName" name="Representative" value="" placeholder="Representative"
        required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="Telephone">Telephone</label>
      <input type="text" class="form-control" id="tel" name="Telephone" value="" placeholder="Telephone" required>
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="Email" value="" placeholder="Email" required>
    </div>
    <div class="col">
      <label for="Call/Meeting">Call/Meeting</label>

      <select id="status" type="text" class="form-control" id="tel" name="CallorMeeting" value=" " required>
        <option value="Call" name="CallorMeeting">Call</option>
        <option value="Meeting" name="CallorMeeting">Meeting</option>

      </select>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Status">Status</label>

        <select id="status" type="text" class="form-control" id="tel" name="Status" value=" " required>
          <option value="Quotation" name="Status">Quotation</option>
          <option value="Payment" name="Status">Invoice</option>
          <option value="Receipt" name="Status">Order</option>
          <option value="Receipt" name="Status">None</option>

        </select>
      </div>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Status">Client</label>
        <select id="status" type="text" class="form-control" id="tel" name="NeworExisting" value=" " required>
          <option value="New Client" name="NeworExisting">New Client</option>
          <option value="Existing Client" name="NeworExisting">Existing Client</option>
        </select>
      </div>
    </div>
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Status">Currency</label>
        <select id="status" type="text" class="form-control" id="tel" name="Currency" value=" " required>
          <option value="USD" name="Currency">USD</option>
          <option value="ZWL" name="Currency">ZWL</option>
        </select>
      </div>
    </div>


    <div class="form-group mb-4">
      <label for="details">Company Details</label>
      <textarea class="form-control" name="Details" id="details" cols="30" rows="12"
        placeholder="Customer Details"></textarea>
    </div>



    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Add Client</button>
    </div>



</form>